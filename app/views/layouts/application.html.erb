<!DOCTYPE html>
<html>
  <head>
    <title>MyTour</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <div id="my-element">
    <div id="header">
      <header>
        <nav class='navbar navbar-expand-sm bg-dark navbar-dark clearfix'>
          <%= link_to('myTour', root_path, class: 'myTour') %>
          <%= link_to('Bands', bands_path) %>
          <ul class="nav nav-pills">
            <% if current_user %>
            <li><%= link_to current_user.name, '/' %></li>
            <li><%= link_to 'Logout', '/sign_out'%></li>
            <% else %>
            <li><%= link_to 'Login', '/sign_in'%></li>
            <li><%= link_to 'Register', '/sign_up' %></li>
            <% end %>
          </ul>
        </nav>
      </header>
    </div>
    <div id="body">
      <body class="<%= params[:controller] %>">
        <%= flash[:alert] %>
        <%= flash[:notice] %>
        <%= yield %>
      </body>
    </div>
  </div>
</html>
